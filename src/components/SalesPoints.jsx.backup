                  <tr className="border-b border-gray-700">
                    <th className="text-left py-3 px-4 text-gray-400 font-semibold">Point de Vente</th>
                    <th className="text-left py-3 px-4 text-gray-400 font-semibold">Type</th>
                    <th className="text-left py-3 px-4 text-gray-400 font-semibold">Zone</th>
                    <th className="text-right py-3 px-4 text-gray-400 font-semibold">Volume</th>
                    <th className="text-right py-3 px-4 text-gray-400 font-semibold">CA</th>
